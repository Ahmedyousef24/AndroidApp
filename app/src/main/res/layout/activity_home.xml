<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aalift.HomeActivity">

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="181dp"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/logout_background"
        android:text="@string/logoutbtn"
        android:textColor="@color/com_facebook_button_background_color_focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <fragment
        android:id="@+id/fragmentHOME"
        android:name="com.example.aalift.ProgressFragment"
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="28dp"
        android:paddingTop="106dp"
        app:layout_constraintBottom_toTopOf="@+id/logout_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </fragment>

</android.support.constraint.ConstraintLayout>