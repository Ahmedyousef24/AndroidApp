<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserGoalsActivity"
    android:background="?attr/backgroundColor">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Height"
        android:id="@+id/textView"
        android:layout_marginTop="96dp"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/activity_level"
        android:layout_alignStart="@+id/activity_level"
        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/height"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/textView8"
        android:layout_toLeftOf="@+id/textView10"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText"
        android:layout_marginStart="-149dp"
        android:layout_marginLeft="-149dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/activity_level"
        android:layout_toRightOf="@+id/activity_level"
        android:text="Cm"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lets setup your goal"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weight"
        android:id="@+id/textView5"
        android:layout_above="@+id/height"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView5"
        android:layout_alignBottom="@+id/height"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@+id/textView6"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kg"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/editText"
        android:layout_toRightOf="@+id/activity_level"
        android:layout_toEndOf="@+id/activity_level"
        android:layout_marginBottom="3dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Activity Level"
        android:id="@+id/textView7"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/activity_level"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Goal"
        android:id="@+id/textView8"
        android:layout_below="@+id/activity_level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/goal"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"/>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:layout_marginBottom="92dp"
        android:background="#0A4477"
        android:onClick="saveAction"
        android:radius="10dp"
        android:text="Done"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender"
        android:id="@+id/textView11"
        android:layout_above="@+id/gender"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/gender"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-20dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gender"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:text="Age"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:imeOptions="actionDone"
        android:layout_alignTop="@+id/gender"
        android:layout_alignLeft="@+id/editText"
        android:layout_marginLeft="3dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="166dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="163dp"
        android:layout_marginBottom="-121dp"
        android:text=""
        android:textColor="@color/white"/>


</RelativeLayout>